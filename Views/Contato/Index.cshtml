@{
    ViewData["Title"] = "Contato";
}
<h1>@ViewData["Title"]</h1>


          <div class="row g-12 bg-light" style="background-image:url(https://images.designtrends.com/wp-content/uploads/2016/04/04071226/HD-Travel-Wallpaper.jpg)" width="100" height="300">

                <div class="col-md-3 md-md-6 mt-4 p-md-4">
                   <h4 class="text-light" >Envie sua mensagem</h4>
                   <br>
                   <br>
                   <h5 class="text-light" >Entre em contato com a nossa equipe, através do preenchimento 
                    desse formulário ao lado.</h5>
                </div>  
                <div class="col-md-6 mb-md-8 p-md-4">
                    <div class="col-md-9 mt-4 p-md-4">
                        <label  class="text-light"  for="exampleFormControlInput1" class="form-label">Nome </label>
                        <input type="name" class="form-control" id="exampleFormControlInput1" placeholder="Escreva seu nome">
                    </div>
                    <div class="col-md-9 mt-2 p-md-4">
                        <label class="text-light"  for="exampleFormControlInput1" class="form-label">Email </label>
                        <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="nome@exemplo.com">
                    </div>
                  <div class="col-md-12 mt-2 p-md-4">
                      <label class="text-light"  for="exampleFormControlTextarea1" class="form-label">Mensagem</label>
                       <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Digite aqui sua dúvidas, reclamações ou elogios..."></textarea>
                       <br>
                   </div>

                </div>
         </div> 
