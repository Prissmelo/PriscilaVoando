@model CRUDMVC.Models.Cliente;
@{
    ViewData["Titurl()e"] = "Cliente";
    var clientes = ViewData["clientes"] as List<Cliente>;
}
<h1>Gerenciamento de Clientes</h1>
<div class="container" style="background-image:url(https://images.designtrends.com/wp-content/uploads/2016/04/04071835/Collage-Travel-Wallpaper.jpg)" width="100" height="300">
    <div class="row">
        <div class="col-md-12">

            <h2 class="text-light">Cadastrar</h2>
            <form asp-controller="Cliente" asp-action="Index">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label  class="text-light" for="">Nome completo</label>
                        <input asp-for="Nome" type="text" class="form-control" id="" placeholder="José Silva">
                    </div>
                    <div class="form-group col-md-3">
                        <label class="text-light" for="">CPF</label>
                        <input asp-for="CPF" type="text" class="form-control" id="" placeholder="000.000.000.000-00">
                    </div>
                     <div class="form-group col-md-6">
                        <label class="text-light" for="">Email</label>
                        <input asp-for="Email" type="text" class="form-control" id="" placeholder="j@exemplo.com">
                    </div>
                     <div class="form-group col-md-3">
                        <label class="text-light" for="">Telefone</label>
                        <input asp-for="Telefone" type="text" class="form-control" id="" placeholder="(11) 98765-4321">
                    </div>
                    <div class="form-group col-md-3">
                        <label class="text-light" for="">Nascimento</label>
                        <input asp-for="Nascimento" type="date" class="form-control" id="">
                    </div>
    
                    <div class="form-group col-md-3">
                        <label class="text-light" for="">Situação</label>
                        <select class="custom-select" asp-for="Situacao">
                            <option selected>-- Selecione uma opção</option>
                            <option>Ativo</option>
                            <option>Inativo</option>
                            <option>Bloqueado</option>
                        </select>
                    </div>
                </div>
                 <button type="submit" class="btn btn-success">Incluir</button>
            </form>
            <br />
          
            <br />

              <br />
            <h2 class="text-light">Atualizar Dados</h2>
             <form asp-controller="Cliente" asp-action="Atualizar">

                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label class="text-light"  for="">Código do cliente</label>
                        <select class="custom-select" asp-for="Id">
                            <option selected>-- Selecione um código</option>
                            @{
                                foreach (var cliente in clientes)
                                {
                                    <option>@cliente.Id</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-light" for="">Nome completo</label>
                        <input asp-for="Nome" type="text" class="form-control" id="" placeholder="Maria Souza">
                    </div>
                    <div class="form-group col-md-3">
                        <label class="text-light" for="">CPF</label>
                        <input asp-for="CPF" type="text" class="form-control" id="" placeholder="000.000.000.000-00">
                    </div>
                     <div class="form-group col-md-6">
                        <label class="text-light" for="">Email</label>
                        <input asp-for="Email" type="text" class="form-control" id="" placeholder="j@exemplo.com">
                    </div>
                     <div class="form-group col-md-3">
                        <label class="text-light" for="">Telefone</label>
                        <input asp-for="Telefone" type="text" class="form-control" id="" placeholder="(11) 98765-4321">
                    </div>
                    <div class="form-group col-md-3">
                        <label class="text-light" for="">Nascimento</label>
                        <input asp-for="Nascimento" type="date" class="form-control" id="">
                    </div>
                    <div class="form-group col-md-3">
                        <label class="text-light" for="">Situação</label>
                        <select class="custom-select" asp-for="Situacao">
                            <option selected>-- Selecione uma opção</option>
                            <option>Ativo</option>
                            <option>Inativo</option>
                            <option>Bloqueado</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Atualizar</button>
            </form>

            <h2 class="text-light">Clientes Cadastrados</h2>
            <table class="table bg-light">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>Email</th>
                        <th>Tel.</th>
                        <th>Dt Nasc</th>
                        <th>Situação</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var cliente in clientes)
                        {
                            <tr>
                                <td>@cliente.Id</td>
                                <td>@cliente.Nome</td>
                                <td>@cliente.CPF</td>
                                <td>@cliente.Email</td>
                                <td>@cliente.Telefone</td>
                                <td>@cliente.Nascimento</td>
                                <td>@cliente.Situacao</td>
                                <td>
                                <form asp-controller="Cliente" asp-action="Deletar">
                                    <button class="btn btn-danger" type="submit">Deletar</button>
                                    <input asp-for="Id" style="visibility:hidden;" type="text" value="@cliente.Id">
                                </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

          
        </div>
    </div>
</div>